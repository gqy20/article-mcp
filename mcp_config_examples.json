{
  "description": "Europe PMC 文献搜索 MCP 服务器配置示例",
  "configs": {
    "claude_desktop": {
      "description": "Claude Desktop 配置 (~/.claude_desktop_config.json)",
      "config": {
        "mcpServers": {
          "europe-pmc": {
            "command": "python",
            "args": ["./europe_pmc_mcp_server.py"],
            "env": {}
          }
        }
      }
    },
    "cursor": {
      "description": "Cursor 配置 (settings.json)",
      "config": {
        "mcp.servers": {
          "europe-pmc": {
            "command": "python",
            "args": ["./europe_pmc_mcp_server.py"],
            "cwd": "/path/to/your/project"
          }
        }
      }
    },
    "http_server": {
      "description": "HTTP 服务器模式配置",
      "notes": "修改 europe_pmc_mcp_server.py 最后一行为:",
      "code_change": "mcp.run(transport=\"sse\", host=\"0.0.0.0\", port=9000)",
      "url": "http://localhost:9000/sse"
    },
    "streamable_http": {
      "description": "Streamable HTTP 服务器模式配置",
      "notes": "修改 europe_pmc_mcp_server.py 最后一行为:",
      "code_change": "mcp.run(transport=\"streamable-http\", host=\"0.0.0.0\", port=9000, path=\"/mcp\")",
      "url": "http://localhost:9000/mcp"
    }
  },
  "usage_examples": {
    "search_basic": {
      "description": "基本搜索示例",
      "tool": "search_europe_pmc",
      "parameters": {
        "keyword": "机器学习",
        "max_results": 10
      }
    },
    "search_with_date": {
      "description": "带日期范围的搜索",
      "tool": "search_europe_pmc",
      "parameters": {
        "keyword": "人工智能",
        "start_date": "2020-01-01",
        "end_date": "2023-12-31",
        "max_results": 20
      }
    },
    "get_article": {
      "description": "获取特定文献详情",
      "tool": "get_article_details",
      "parameters": {
        "pmid": "12345678"
      }
    }
  },
  "troubleshooting": {
    "common_issues": [
      {
        "issue": "无法连接到 Europe PMC API",
        "solution": "检查网络连接，确保可以访问 https://www.ebi.ac.uk"
      },
      {
        "issue": "搜索结果为空",
        "solution": "尝试更通用的关键词，或调整日期范围"
      },
      {
        "issue": "工具未在客户端显示",
        "solution": "检查配置文件路径，确保 Python 环境正确"
      }
    ]
  }
} 